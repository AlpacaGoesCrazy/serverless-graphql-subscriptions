# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 100

[*.yml]
indent_style = spaces
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.js]
trim_trailing_whitespace = true
